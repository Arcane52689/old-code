
<form
  action="<%=request.persisted? ? cat_rental_request_url(request) : cat_rental_requests_url %>"
  method="post">

  <% if request.persisted? %>
    <input name="_method" type="hidden" value="PATCH">
  <% end %>

  <%= authentic_form %>
  <label for="start_date">Start Date</label>
  <input type="date" name="cat_rental_request[start_date]"
  value="<%= request.start_date %>">
  <br>

  <label for="end_date">End Date</label>
  <input type="date" name="cat_rental_request[end_date]"
  value="<%= request.end_date %>">
  <br>

  <label for="cat">Cat</label>
  <select name="cat_rental_request[cat_id]">

    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"
        <%= 'selected="selected"' if request.cat_id == cat.id %>>
        <%= cat.name %>
      </option>
    <% end %>

  </select>

  <input type="submit" value="<%= request.persisted? ? 'Update request' : 'Submit Request'%>">
</form>
